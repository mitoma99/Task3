<main>
  <div>
  <h2>User info</h2>
  
  <%= image_tag @user.get_profile_image(100,100) %>
  
  <tbody>
    <tr>name:<%= @user.name %></tr>
    <tr>introduction:<%= @user.introduction %></tr>
  </tbody>
  <div>
    <% if @user == current_user %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
  </div>
  </div>
  
  <div>
    <h2>Books</h2>
    
    <table>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
         <td><%= image_tag @user.get_profile_image(100,100) %></td> 
         <td><%= link_to book.title, "/books/#{book.id}" %></td>
         <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    
  </div>
  
</main>
